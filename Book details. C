
#include<stdio.h>
struct books {
    char name[20];
    int edition;
    char genre[20];
    char author [20];
};
int main(){
{
    int i;
    struct books b[20];
    for(i=0;i<3;i++)
    {
        printf ("enter the details of books%d\n", i+1);
        printf ("enter the book name:");
        scanf("%s",&b[i]. name);
        printf ("enter the edition:");
        scanf("%s", &b[i]. edition);
        printf("enter the author of book:");
        scanf( "%s",&b[i]. author);
        printf ("enter the book genre:");
        scanf("%s", &b[i]. genre);
    }
        return 0;
    }
}
    
